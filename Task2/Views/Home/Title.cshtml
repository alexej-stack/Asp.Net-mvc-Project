@model IEnumerable<Task2.Models.Company>
@{
    ViewBag.Title = "Title";
}

<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckfinder/ckfinder.js"></script>

<h2>Title</h2>
<div class="row">
    @foreach (var company in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@company.UserImage</h3>
                    <h3>@company.tName</h3>
                    <p><a class="btn btn-primary" role="button" onclick="RedirectToComp(@company.ID)">OPEN</p>
                </div>

            </div>

        </div>
    }

</div>
<script type="text/javascript">

    $(function () {
        $('#UserImage').ckeditor();
    });
    function RedirectToComp(id) {
        window.location.replace("Manage/Details?id="+id)
    }
</script>